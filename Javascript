    <script>
        // Simple functionality for demonstration
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', () => {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                
                // Update editor content based on active tab
                const fileName = tab.querySelector('span').textContent;
                document.querySelector('.code-header h2').textContent = fileName;
            });
        });
        
        document.querySelectorAll('.sidebar-item').forEach(item => {
            item.addEventListener('click', () => {
                document.querySelectorAll('.sidebar-item').forEach(i => i.classList.remove('active'));
                item.classList.add('active');
            });
        });
        
        // Close tab functionality
        document.querySelectorAll('.close-tab').forEach(closeBtn => {
            closeBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                const tab = closeBtn.parentElement;
                tab.remove();
            });
        });
    </script>
